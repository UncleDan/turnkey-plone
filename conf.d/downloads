#!/bin/bash -ex

dl() {
    [ "$FAB_HTTP_PROXY" ] && PROXY="--proxy $FAB_HTTP_PROXY"
    cd $2; curl -L -f -O $PROXY $1; cd -
}

VERSION="5.2"
SUBVERSION="13"
INSTALLER_VERSION="1.0"

URL="https://launchpad.net/plone/$VERSION/$VERSION.$SUBVERSION/+download/Plone-$VERSION.$SUBVERSION-UnifiedInstaller-$INSTALLER_VERSION.tgz"

dl $URL /usr/local/src

